---
import Base from "../../layouts/Base.astro";
import { getOffre } from "../../js/backend.mjs";

const { id } = Astro.params;
const offre = await getOffre(id);
if (!offre) {
    return Astro.redirect("/offres");
}
---

<Base>
    <div class="flex flex-col gap-5 w-1/3">
        <h2 class="text-4xl">{offre.nomMaison}</h2>
        <img src={offre.imgURL} alt="une image au pif" class="rounded-lg" />
        <ul class="flex gap-5">
            <li>{offre.prix}â‚¬</li>
            <li>{offre.surface}m2</li>
            <li>{offre.nbSdb}Salle de bain</li>
            <li>{offre.nbChambres} Chambres</li>
        </ul>
    </div>
</Base>
